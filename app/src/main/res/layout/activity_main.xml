<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_activity_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/counter_one" />

    <Button
        android:id="@+id/main_activity_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0" />

    <TextView
        android:id="@+id/main_activity_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_two" />

    <Button
        android:id="@+id/main_activity_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0" />

    <TextView
        android:id="@+id/main_activity_tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/counter_three" />

    <Button
        android:id="@+id/main_activity_button_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_0" />

</LinearLayout>